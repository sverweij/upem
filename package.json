{
  "name": "upem",
  "version": "7.0.2",
  "type": "module",
  "description": "Ups your package.json dependencies to latest. Opinionated. Respectless.",
  "bin": {
    "upem": "src/cli.js"
  },
  "exports": {
    ".": "./src/main.js"
  },
  "files": [
    "src/**/*.js",
    "!src/**/*.spec.js",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "npm",
    "check",
    "updates",
    "dependencies",
    "package.json",
    "version",
    "management",
    "ncu"
  ],
  "author": "Sander Verweij (https://sverweij.github.io/)",
  "license": "MIT",
  "homepage": "https://github.com/sverweij/upem",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sverweij/upem"
  },
  "bugs": {
    "url": "https://github.com/sverweij/upem/issues"
  },
  "devDependencies": {
    "dependency-cruiser": "11.14.1",
    "eslint": "8.22.0",
    "eslint-config-moving-meadow": "3.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-budapestian": "4.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "26.8.2",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-security": "1.5.0",
    "eslint-plugin-unicorn": "43.0.2",
    "husky": "8.0.1",
    "jest": "28.1.3",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1"
  },
  "dependencies": {
    "libnpmconfig": "^1.2.1"
  },
  "scripts": {
    "build": "npm-run-all depcruise:graph",
    "build:stage": "git add .",
    "check": "npm-run-all --parallel depcruise lint test",
    "depcruise": "depcruise src --validate --cache",
    "depcruise:graph": "npm-run-all depcruise:graph:html",
    "depcruise:graph:html": "depcruise src --validate --cache --output-type dot | dot -T svg | tee docs/dependencygraph.svg | depcruise-wrap-stream-in-html > docs/dependencygraph.html",
    "depcruise:graph:view": "depcruise src --validate --cache --output-type dot --prefix vscode://file/$(pwd)/ | dot -T svg | depcruise-wrap-stream-in-html | browser",
    "lint": "npm-run-all lint:eslint lint:prettier",
    "lint:eslint": "eslint src",
    "lint:prettier": "prettier --check \"src/**/*.js\" \"*.{json,yml,md}\" .github",
    "lint:fix": "npm-run-all lint:fix:eslint lint:fix:prettier",
    "lint:fix:eslint": "eslint --fix src",
    "lint:fix:prettier": "prettier --write \"src/**/*.js\" \"*.{json,yml,md}\" .github",
    "test": "NODE_OPTIONS=--experimental-vm-modules npx jest --all --collectCoverage",
    "update-dependencies": "npm-run-all upem:update upem:install lint:fix check",
    "upem:update": "npm outdated --json | src/cli.js",
    "upem:install": "npm install",
    "version": "npm-run-all build check build:stage",
    "prepare": "husky install"
  },
  "eslintConfig": {
    "extends": [
      "moving-meadow"
    ],
    "parserOptions": {
      "ecmaVersion": 2020
    },
    "rules": {
      "complexity": [
        "warn",
        5
      ],
      "security/detect-non-literal-fs-filename": "off",
      "security/detect-object-injection": "off",
      "node/no-unsupported-features/es-syntax": "off",
      "sort-imports": "off",
      "import/no-relative-parent-imports": "off",
      "jest/require-hook": "off"
    },
    "overrides": [
      {
        "files": [
          "src/**/*.spec.js"
        ],
        "env": {
          "jest": true
        },
        "rules": {
          "node/global-require": "off",
          "max-lines-per-function": "off"
        }
      }
    ]
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "lcov",
      "html"
    ],
    "testEnvironment": "node",
    "transform": {}
  },
  "engines": {
    "node": "^14.13.1||>=16"
  },
  "lint-staged": {
    "src/**/*.js": [
      "depcruise --validate -- src",
      "eslint --fix"
    ],
    "*.{js,json,md,yml}": [
      "prettier --write"
    ]
  }
}
