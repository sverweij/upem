{
  "name": "upem",
  "version": "2.0.1",
  "description": "Ups your package.json dependencies to latest. Opinionated. Respectless.",
  "bin": {
    "upem": "./bin/upem.js"
  },
  "main": "index.js",
  "files": [
    "src/**/*.js",
    "bin/**/*.js",
    "package.json",
    "README.md"
  ],
  "keywords": [
    "npm",
    "check",
    "updates",
    "dependencies",
    "package.json",
    "version",
    "management",
    "ncu"
  ],
  "author": "Sander Verweij (https://sverweij.github.io/)",
  "license": "MIT",
  "homepage": "https://github.com/sverweij/upem",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sverweij/upem"
  },
  "bugs": {
    "url": "https://github.com/sverweij/upem/issues"
  },
  "devDependencies": {
    "dependency-cruiser": "4.19.0",
    "eslint": "5.16.0",
    "eslint-config-standard": "12.0.0",
    "eslint-plugin-import": "2.17.3",
    "eslint-plugin-node": "9.1.0",
    "eslint-plugin-promise": "4.1.1",
    "eslint-plugin-security": "1.4.0",
    "eslint-plugin-standard": "4.0.0",
    "jest": "24.8.0",
    "npm-run-all": "4.1.5"
  },
  "dependencies": {
    "get-stdin": "7.0.0",
    "libnpmconfig": "1.2.1",
    "lodash.get": "4.4.2"
  },
  "scripts": {
    "build": "npm-run-all depcruise:graph",
    "build:stage": "git add .",
    "check": "npm-run-all --parallel depcruise lint test",
    "depcruise": "depcruise --validate -- bin src test",
    "depcruise:graph": "npm-run-all depcruise:graph:*",
    "depcruise:graph:html": "depcruise --validate --output-type dot -- bin src | dot -T svg | cat docs/assets/depcruise-graph-head.snippet.html - docs/assets/depcruise-graph-foot.snippet.html > docs/dependencygraph.html",
    "depcruise:graph:png": "depcruise --validate --output-type dot -- bin src | dot -Gdpi=192 -T png | pngquant - > docs/dependencygraph.png",
    "lint": "eslint bin src test",
    "lint:fix": "eslint --fix bin src test",
    "test": "jest --collectCoverage",
    "update-dependencies": "npm-run-all upem:update upem:install lint:fix check",
    "upem:update": "npm outdated --json | bin/upem.js",
    "upem:install": "npm install",
    "version": "npm-run-all build check build:stage"
  },
  "eslintConfig": {
    "extends": "standard",
    "plugins": [
      "security"
    ],
    "rules": {
      "complexity": [
        "warn",
        4
      ],
      "security/detect-unsafe-regex": "error",
      "security/detect-buffer-noassert": "error",
      "security/detect-child-process": "error",
      "security/detect-disable-mustache-escape": "error",
      "security/detect-eval-with-expression": "error",
      "security/detect-no-csrf-before-method-override": "error",
      "security/detect-non-literal-fs-filename": "off",
      "security/detect-non-literal-regexp": "error",
      "security/detect-non-literal-require": "error",
      "security/detect-object-injection": "off",
      "security/detect-possible-timing-attacks": "error",
      "security/detect-pseudoRandomBytes": "error"
    }
  },
  "jest": {
    "clearMocks": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text-summary",
      "lcov",
      "html"
    ],
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=6"
  }
}
